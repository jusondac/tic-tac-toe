<div data-controller="tic-tac-toe" class="w-full flex flex-col items-center justify-center">
  <div class="gameplay">
    <h2 
    data-tic-tac-toe-target="currentPlayer" 
    class="text-white mb-10">Player: <%= @current_player %>
    </h2>
    <div class="bg-blue-700 px-4 py-2 cursor-pointer mb-4 text-white rounded-xl" 
  data-action="click->tic-tac-toe#resetButton"
      >Reset</div>
    <div class="grid grid-cols-3 gap-2">
      <% (0..8).each do |index| %>
        <div 
        class="cell flex w-[100px] h-[100px] bg-gray-800 shadow-xl rounded-md items-center justify-center text-white" 
        data-tic-tac-toe-target="cell" 
        data-action="click->tic-tac-toe#selectCell" 
          data-index="<%= index %>">
        </div>
      <% end %>
    </div>
  </div>
</div>